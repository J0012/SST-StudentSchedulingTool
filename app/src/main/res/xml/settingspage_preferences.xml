<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="User Details">

    <EditTextPreference
        app:key="signature"
        app:title="Your Username"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue=""
        app:entries="@array/reply_entries"
        app:entryValues="@array/reply_values"
        app:key="reply"
        app:title="Your Class List"
        app:useSimpleSummaryProvider="true"
        />

    </PreferenceCategory>

    <PreferenceCategory app:title="User Preferences">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Enable Dark Mode" />


    </PreferenceCategory>

</PreferenceScreen>